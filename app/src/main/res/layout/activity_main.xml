<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="applications.brightmood.MainActivity">


    <EditText
        android:layout_marginTop="100dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/etWord"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="@string/describe_the_word" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/etDomain"
        android:layout_below="@+id/etWord"
        android:layout_centerHorizontal="true"
        android:hint="@string/domain_name" />



    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/etArea"
        android:layout_below="@+id/etDomain"
        android:layout_centerHorizontal="true"
        android:hint="@string/area_number"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/etPreset"
        android:layout_below="@+id/etArea"
        android:layout_centerHorizontal="true"
        android:hint="@string/preset_number_could_be_empty"/>

    <Button
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add"
        android:id="@+id/btnAdd"
        android:layout_below="@+id/etPreset"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view"
        android:id="@+id/btnView"
        android:layout_below="@+id/etPreset"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btnGo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnAdd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:text="go" />
</RelativeLayout>
